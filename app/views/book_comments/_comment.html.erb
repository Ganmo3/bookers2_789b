      <% book.book_comments.each do |book_comment| %>
        <div class="comment media">
          <div class="media-left">
            <%= link_to(book_comment.user) do %>
              <%= image_tag book_comment.user.get_profile_image, size:"60x60" %>
            <% end %>
          </div>
          <div class="media-body">
            <p class="media-heading"><%= link_to book_comment.user.name, book_comment.user %></p>
            <%= book_comment.comment %>
          </div>
          <% if book_comment.user == current_user %>
            <div class="media-right">
              <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
            </div>
          <% end %>
        </div>
      <% end %>
      






    