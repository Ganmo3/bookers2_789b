<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <%= render 'post_count', books: @books, today_book: @today_book, yesterday_book: @yesterday_book, this_week_book: @this_week_book, the_day_before: @the_day_before, last_week_book: @last_week_book %>
      <%= render 'chart', books: @books, today_book: @today_book %>
      <%= render 'search_count', user: @user %>
    </div>
  </div>
</div>
